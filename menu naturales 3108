bool capicua(int a)
{ bool k=true;
	if (a==invertir(a))
	{return k;}
	else
		k=false;
	return k;
}
void salarios(float a)
{
	
	float b,c=20,tt;
	
	for(int i=1;i<=a;i++)
	{
	cout<<"ingrese horas trbajadas"<<endl;
	cin>>b;
	tt=salario(b,c);
		cout<<"el sueldo es "<<endl;
		cout<<tt<<endl;
	}
		
}
float salario(float a, float b)
{
	float st;
		st=a*b;
	return st;
}
int sumadigitos (int a)
{ int h=0;
	while (a>0)
		
	{	h=a%10+h;
	a=a/10;}
	return h;
}
void automorficos ()
{	int r=1,aux,h=1,c=0;
	aux=h;
	float a=2;
	for (h=1;h<=25;h++){
	if (h<10){
		c=10;
		r= pow(h,a);
	if (r%c==h){
		cout<<r<<" ";}}
	else if	(h>9){
			c=100;
		r= pow(h,a);
	if (r%c==h){
		cout<<r<<" ";
		}
		}
	}
}
