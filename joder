
#include "stdafx.h"
#include <iostream.>
#include <conio.h>

struct datos {
	int a[20][20],m,n;
};
void caracol (int a[20][20],int tam);
void cargar (datos VEC[20],int tam);
 using namespace std;
void main(){
datos VEC[10];
int tam;
cout<<"introducir tamaÃ±o del vector"<<endl;
cin>>tam;
cargar(VEC,tam);
getch();
}

void cargar (datos VEC[20],int tam){
	for (int i=0;i<tam;i++)
	{
		caracol(VEC[i].a, tam);
	}

void caracol (int a[20][20],int tam){

	int paso=1,cont=1;
for(int k=0;k<tam;k++)
for(int j=0;j<tam;j++)
		a[k][j]=0;

    for(int i=0;i<tam;i++){
 
	    if(paso==1){
			for(int j=0;j<tam;j++){
				       if(a[i][j] == 0)
				       a[i][j]=cont++;
			 }
					     }
	    paso++;
 
 
	     if(paso==2){
		       for(int j=0;j<tam;j++){
			       if(a[j][tam-(i+1)]==0)
			       a[j][tam-(i+1)]=cont++;
			       }

				      }
 
	     paso++;
	     if(paso==3){
			  for(int j=tam-1;j>=0;j--){
				 if(a[tam-(i+1)][j] == 0)
				 a[tam-(i+1)][j]=cont++;
				 }
				 }
		paso++;
 
		if(paso==4){
			    for(int j=tam-1;j>=0;j--){
				    if(a[j][i] == 0)
				    a[j][i]=cont++;
				    }
				    }
		paso=1;
 
 
     }
 for(int ii=0;ii<tam;ii++){
	for(int j=0;j<tam;j++){
	if(a[ii][j]<10)cout<<"0"; 
	}
 }
}
