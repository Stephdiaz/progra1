#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;
void main()
{
	int t,r,s,n,st;
	cout<<"ingrese un termino inicial positivo";
	cin>>t;
	while (t>=0)
	{
		s=0;
		cout<<"introudcir razon de la suma";
		cin>>r;
		cout<<"iintroducir hasta que numero desea sumar";
		cin>>n;
		repeat (st<=n)
		{
			st=s;
			cout<<st;
		}
		cout<<"la suma es"<<endl;
		cout<<s;
	}
	cout<<"ingrese un termino inicial positivo";
	cin>>t;
getch ();
}
