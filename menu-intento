#include "stdafx.h"
#include "conio.h"
#include <iostream>
#define IVA 0.13
#define AFP 0.1271
using namespace std;
void main ()
{
	int a,i,opcion;
	float sb,sn;
	do {
	cout<<"Menu";
     cout << "1.- sueldo" << endl;
     cout << "2.- hola mundo" << endl;
   	 cout << "0.- Salir" << endl;
     cout << "Elige una opciÃ³n: " ;
     cin >>opcion;
	
	 switch (opcion) 
	 {
	    case 1: 
			{
				cout<<"ingresar numero de empleados"<<endl;
				cin>>a;
				for (i=1;i<=a;i++)
				{
					cout<<"Ingresar salario bruto"<<endl;
					cin>>sb;
					if (sb>=7000)
						sn=sb-(IVA+AFP)*sb;
					else
						sn=sb-(AFP*sb);
					cout<<"El salario neto es:"<<endl;
					cout<<sn<<endl; break;
				}
			}
		case 2: 
			{
				cout<<"hola mundo"; break;
			}
		case 0:
			{
				cout << "Salir"; break;
			}
		default: cout << "Opcion invalida" << endl;
		 }
	 cout << "El resultado es " <<endl;
	 while (opcion != 0);
	}

	 getch();

	}
