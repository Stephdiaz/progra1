# par impar con funciones
#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
bool num_par (int n);
void main ()
{
	int numero;
	bool z;
	cout<<"introducir numero para calcular si es par o impar"<<endl;
	cin>>numero;
	z=num_par(numero);
	if (z)
		cout<<"es par";
	else
		cout<<"es impar";
getch ();	
}
bool num_par (int n)
{
	bool s;
	if (n%2==0)
	s=true;
	else
	s=false;
	return s;
}
