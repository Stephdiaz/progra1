using namespace std;

void main()

{
	int i,n,p;
	p=1;
	do{
	cout<<"Bienvenidos"<<endl;
	cout<<"ingreso numero para sacar el factorial"<<endl;
	cin>>n;
	} while (n<0);
	
	for	(i=1;i<=n;i++)
	
		p=p*i;
	
		cout<<"El factorial de "<<n;
		cout<<" es "<<endl;
		cout<<p;
		getch();
		}
	
